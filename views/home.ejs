<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('./partials/head') %>
  <title>Home</title>
</head>

<body>
  <%- include('./partials/nav') %>

  <div class="container mt-3 row row-cols-4">
    <% locals.blogs.forEach(blog => { %>
    <div class="col">
      <div class="card" style="width: 18rem;">
        <img src="<%= blog.coverImageURL %>" class="card-img-top" alt="<%= blog.title %> Image">
        <div class="card-body">
          <h5 class="card-title"><%= blog.title %></h5>
          <p><%= blog.coverImageURL %></p>
          <!-- <p>../<%= blog.coverImageURL.substr(2, blog.coverImageURL.length - 1) %></p> -->
          <a href="/blog/<%= blog._id %>" class="btn btn-primary">View</a>
        </div>
      </div>
    </div>
    <% }) %>
  </div>

  <%- include('./partials/script') %>
</body>

</html>